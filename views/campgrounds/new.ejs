<% layout('./layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form method="POST" action="/campgrounds" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">
            Looks good!
          </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">
            Looks good!
          </div>
      </div>
      <div class="mb-3 custom-file">
        <label for="image" class="form-label custom-file-label">Images to Upload</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
      </div>
      <!-- <input type="file" name="image" id="" multiple> -->
      <!-- <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          class="form-control"
          name="campground[image]"
          id="image"
          required
        />
        <div class="valid-feedback">
            Looks good!
          </div>
      </div> -->
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            class="form-control"
            type="text"
            name="campground[price]"
            id="price"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          class="form-control"
          name="campground[description]"
          id="description"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">
            Looks good!
          </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Add campground</button>
      </div>
    </form>
  </div>
</div>
